{{extend 'layout.html'}}
<html>
    <head>
        <style>
            a:link, a:visited {
                background-color: black;
                color: white;
                padding: 14px 25px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
            }

            a:hover, a:active {
                background-color: black;
            }

            .post{
                background-color: lightgrey;
                text-align: center;
                border: 3px solid gray;
                border-radius: 30px;
                width:100%;
                margin:5 auto;
            }
            .post p{
                color: black;
                font: 100% Helvetica;
            }
            .post p2{
                text-align:left;
                color: blue;
                font: 80% Helvetica;
            }
        </style>
    </head>
    <body>
        Hi
        {{for post in feed:}}
        <div class="post">
            {{=post}}
            <br/>
            <p>
                {{=post.body}}
            </p>
            <p2>
                {{=post.created_on}}
            </p2>
            <a href="{{=URL('default','projects')}}">{{=post.id}}</a>
        </div>
        {{pass}}
    </body>
</html>
