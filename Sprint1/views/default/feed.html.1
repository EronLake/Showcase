{{extend 'layout.html'}}
<html>
    <head>
        <style>

            a:link, a:visited {
                background-color: black;
                color: white;
                padding: 14px 25px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
            }

            a:hover, a:active {
                background-color: black;
            }

            .post{
                background-color: white;
                text-align: center;
                border: 2px solid gray;
                border-radius: 3px;
                width:100%;
                padding: 10px;
                margin: 5;
                padding-left: 10px;
                padding-right: 10px;
                position: relative;
                left: -100px;
            }
            .post p{
                color: black;
                font: 100% Helvetica;
            }
            .post p2{
                text-align:left;
                color: blue;
                font: 80% Helvetica;
            }
            .new_line:{margin: 10;}
        </style>
    </head>
    <body>
        Hi
        {{for post in feed:}}
        <div class="post">
            {{=post}}
            <br/>
            <p>
                {{=post.body}}
            </p>
            <p2>
                {{=post.created_on}}
            </p2>
            <a href="{{=URL('default','projects',args=post.id)}}">{{=post.id}}</a>
        </div>
        <p calss = "new_line"></p>
        {{pass}}
    </body>
</html>
